---
import WidgetLayout from './WidgetLayout.astro'

import { i18n } from '../../i18n/translation'
import I18nKey from '../../i18n/i18nKey'
import { getLanguageList, getLanguageNativeName } from '../../utils/content-utils'
import ButtonLink from '../control/ButtonLink.astro'

const languages = await getLanguageList()

const COLLAPSED_HEIGHT = '7.5rem'
const COLLAPSE_THRESHOLD = 5

const isCollapsed = languages.length >= COLLAPSE_THRESHOLD

interface Props {
  class?: string
  style?: string
}
const className = Astro.props.class
const style = Astro.props.style
---

<WidgetLayout name={i18n(I18nKey.languages)} id="languages" isCollapsed={isCollapsed} collapsedHeight={COLLAPSED_HEIGHT}
                class={className} style={style}
>
    {languages.map((lang) =>
        <ButtonLink
            url={`/archive/lang/${lang.name}/`}
            badge={String(lang.count)}
            label={`View all posts in ${getLanguageNativeName(lang.name)}`}
        >
            {getLanguageNativeName(lang.name)}
        </ButtonLink>
    )}
</WidgetLayout>
